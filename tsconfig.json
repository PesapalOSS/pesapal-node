{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": false,
    "target": "es2020",
    "module": "commonjs",
    "checkJs": false,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strict": true,
    "strictFunctionTypes": true,
    "resolveJsonModule": true,
  },
  "include": ["src/**/*.ts", "tests/**/*.ts"],
  "exclude": ["dist", "node_modules"]
}
